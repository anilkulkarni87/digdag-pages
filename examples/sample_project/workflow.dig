timezone: UTC

schedule:
  cron>: "0 12 * * *"  # every day at 12:00 UTC

_export:
  # bring in shared settings via include-as-key
  !include: "config/environment.yml"
  retries: 1

+start:
  echo>: "Kick off sample workflow"

+query:
  td>:
    file: "queries/foo.sql"

+branch:
  _do:
    +if_check:
      if>: "${true}"     # <-- QUOTED
      _do:
        +notify:
          mail>: "someone@example.com"
